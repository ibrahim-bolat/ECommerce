@model UserDetailViewModel
@{
    Layout = "Admin/_AdminLayout";
    ViewData["Title"] = "Profili DÃ¼zenle";
}

<div class="breadcrumbs">
        <div class="col-sm-4">
            <div class="page-header float-left">
                <div class="page-title">
                    <h1>Dashboard</h1>
                </div>
            </div>
        </div>
        <div class="col-sm-8">
            <div class="page-header float-right">
                <div class="page-title">
                    <ol class="breadcrumb text-right">
                        <li class="active">Dashboard</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="content mt-3">
                <div class="col-sm-12">
                    <div class="alert  alert-success alert-dismissible fade show" role="alert">
                        <span class="badge badge-pill badge-success">Success</span> You successfully read this important alert message.
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                </div>

        <div class="container">
            <div class="col-sm-8">
                <form asp-controller="Account" asp-action="EditProfile" method="post" class="border border-2 p-2 bg-white">
                    <div class="form-group row offset-sm-2 col-sm-10 text-danger" asp-validation-summary="All">
                    </div>
                    <div class="form-group row">
                        <label asp-for="FirstName" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="FirstName" class="form-control"/>
                        </div>
                        <span asp-validation-for="FirstName" class="offset-sm-2 col-sm-10 text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="LastName" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="LastName" class="form-control"/>
                        </div>
                        <span asp-validation-for="LastName" class="offset-sm-2 col-sm-10 text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="PhoneNumber" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="PhoneNumber" class="form-control"/>
                        </div>
                        <span asp-validation-for="PhoneNumber" class="offset-sm-2 col-sm-10 text-danger"></span>
                    </div>

                    <div class="form-group row">
                        <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="UserName" disabled class="form-control"/>
                        </div>
                        <span asp-validation-for="UserName" class="offset-sm-2 col-sm-10 text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Email" disabled class="form-control"/>
                        </div>
                        <span asp-validation-for="Email" class="offset-sm-2 col-sm-10 text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <div class="offset-sm-2 col-sm-10">
                            <input type="submit" value="Kaydet" class="btn btn-info"/>
                        </div>
                    </div>
                </form>
            </div>
            </div>

    </div> <!-- .content -->
