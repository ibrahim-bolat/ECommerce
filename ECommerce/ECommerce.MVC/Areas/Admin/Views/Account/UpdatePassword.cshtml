@model UpdatePasswordDto

@{
    Layout = "Account/_AccountLayout";
    ViewData["Title"] = "Parola Güncelle";
}
@if (ViewBag.State == null)
    {
        <div class="login-form">
        <form asp-area="Admin" asp-controller="Account" asp-action="UpdatePassword" method="post" class="border border-2 p-2">
            <div class="form-group row offset-sm-2 col-sm-10 text-danger" asp-validation-summary="All">
            </div>
            <div class="form-group row">
                <label asp-for="Password" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input type="password" asp-for="Password" class="form-control"/>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="RePassword" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input type="password" asp-for="RePassword" class="form-control"/>
                </div>
            </div>
            <div class="form-group row">
                <div class="offset-sm-3 col-sm-9">
                    <input type="submit" value="Şifreyi Güncelle" class="btn btn-warning"/>
                </div>
            </div>
        </form>
        </div>
    }
    else
    {
        if (ViewBag.State)
        {
            <div class="alert-success my-2">Şifre başarıyla güncellenmiştir.</div>
            <div> <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="btn btn-success"> Giriş</a></div>
        }
        else
        {
            <div class="alert-danger my-2">Şifreyi güncellerken beklenmeyen hatayla karşılaşıldı.Kurallara uygun şifre oluşturmayı deneyiniz</div>
        }
    }
