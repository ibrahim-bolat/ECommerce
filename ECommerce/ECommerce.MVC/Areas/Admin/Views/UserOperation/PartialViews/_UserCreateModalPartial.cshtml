@model UserBriefDetailsDto
<div class="modal fade" id="userCrateModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form id="createModalForm">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myCreateModalLabel">Kullanıcı Ekle</h4>
                    <button type="button" class="close" data-dismiss="modal">×</button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <input asp-for="@Model.Id" id="createID" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Name" class="control-label"></label>
                        <input asp-for="@Model.Name" id="createName" class="form-control"/>
                        <span asp-validation-for="@Model.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.SurName" class="control-label"></label>
                        <input asp-for="@Model.SurName" id="createSurName" class="form-control"/>
                        <span asp-validation-for="@Model.SurName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.UserName" class="control-label"></label>
                        <input asp-for="@Model.UserName" id="createUserName" class="form-control"/>
                        <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Email" class="control-label"></label>
                        <input asp-for="@Model.Email" id="createEmail" class="form-control"/>
                        <span asp-validation-for="@Model.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Password" class="control-label"></label>
                        <input asp-for="@Model.Password" id="createPassword" class="form-control"/>
                        <span asp-validation-for="@Model.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.RePassword" class="control-label"></label>
                        <input asp-for="@Model.RePassword" id="createRePassword" class="form-control"/>
                        <span asp-validation-for="@Model.RePassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary" id="btnAdd">Ekle</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>