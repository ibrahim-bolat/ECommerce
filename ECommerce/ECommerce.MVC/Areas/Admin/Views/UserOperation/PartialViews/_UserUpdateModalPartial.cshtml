@model UserBriefDetailsViewModel
<div class="modal fade" id="userUpdateModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form id="updateModalForm">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myUpdateModalLabel">Kullanıcı Güncelle</h4>
                    <button type="button" class="close" data-dismiss="modal">×</button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <input asp-for="@Model.Id" id="updateID" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Name" class="control-label"></label>
                        <input asp-for="@Model.Name" id="updateName" class="form-control"/>
                        <span asp-validation-for="@Model.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.SurName" class="control-label"></label>
                        <input asp-for="@Model.SurName" id="updateSurName" class="form-control"/>
                        <span asp-validation-for="@Model.SurName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.UserName" class="control-label"></label>
                        <input asp-for="@Model.UserName" id="updateUserName" class="form-control"/>
                        <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Email" class="control-label"></label>
                        <input asp-for="@Model.Email" id="updateEmail" class="form-control"/>
                        <span asp-validation-for="@Model.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Password" class="control-label"></label>
                        <input asp-for="@Model.Password" id="updatePassword" class="form-control"/>
                        <span asp-validation-for="@Model.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.RePassword" class="control-label"></label>
                        <input asp-for="@Model.RePassword" id="updateRePassword" class="form-control"/>
                        <span asp-validation-for="@Model.RePassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary" id="btnUpdate">Güncelle</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>